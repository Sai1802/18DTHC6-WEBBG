
@{
    ViewBag.Title = "ĐĂNG KÝ";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<div class="container">
    <h1 class="text-center">ĐĂNG KÝ TÀI KHOẢN</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label><strong>Họ Tên(<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" class="form-control" placeholder="Tên đăng nhập hoặc Email" type="text" />
            </div>
            <div class="form-group">
                <label><strong>Số điện thoại(<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" class="form-control" placeholder="Tên đăng nhập hoặc Email" type="text" />
            </div>
            <div class="form-group">
                <label><strong>Tên Đăng Nhập(<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" class="form-control" placeholder="Tên đăng nhập hoặc Email" type="text" />
            </div>
            <div class="form-group">
                <label><strong>Mật khẩu(<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" class="form-control" placeholder="Mật khẩu" type="password" />
            </div>
            <div class="form-group">
                <label><strong> Xác nhận mật khẩu(<span class="text-danger">*</span>)</strong></label>
                <input name="fullname" class="form-control" placeholder="Mật khẩu" type="password" />
            </div>
            <div class="form-group">
                <button class="btn btn-info">ĐĂNG KÝ</button>
            </div>
            <div class="form-group">
                <strong>(<span class="text-danger">*</span>)</strong> Bắt buộc phải nhập
            </div>
        </div>

    </div>
</div>

