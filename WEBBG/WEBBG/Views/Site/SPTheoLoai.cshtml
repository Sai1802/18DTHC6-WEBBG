
@{
    ViewBag.Title = "SPTheoLoai";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<div class="container">
    <div class="row">
        <h3 class="text-center my-3 " style="color:red;">SẢN PHẨM THEO LOẠI</h3>
        @foreach (var sp in Model)
        {
            <div class=" col-md-3">
                <div class="card" style="width: 100%;">
                    <img src="~/Public/img/@sp.ANHBIA" class="card-img-top" alt="...">
                    <div class="card-body">
                        <a href="@Url.Action("Details", "Site", new { id = sp.MASP })" style="text-decoration:none;">

                            <h5 class="card-title">@sp.TENSP</h5>
                        </a>
                        <h5>Giá Bán: @sp.GIABAN</h5>
                        <a href="@Url.Action("ThemGioHang","GioHang", new { @iMASP =sp.MASP, @strURL = Request.Url.ToString()})" class="btn btn-primary">Đặt mua</a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>
